<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.model.BoardMapper">
    
    <resultMap type="HashMap" id="boardMap">
    	<id column="title" property="title"/>
    	<id column="content" property="content"/>
    </resultMap>
    
    <resultMap type="HashMap" id="sampleMap">
    	<id column="test" property="seq"/>
    </resultMap>
    
    <select id="selectBoardList" resultMap="boardMap">
        SELECT title, content FROM boards
    </select>
    
    <select id="selectBoardList2" resultMap="sampleMap">
        SELECT 'bbbbbb' as test FROM boards
    </select>
    
    <select id="selectBoardList3" resultMap="sampleMap">
        SELECT 'cccccc' as test FROM boards
    </select>
    
    <select id="selectBoardList4" resultMap="sampleMap">
        SELECT 'dddddd' as test FROM boards
    </select>
    
</mapper>